extends ../layouts/common

block content
  h1 Books List
  
  form.d-flex.flex-column.w-5(action="/books/add", method="POST")
    .form-group
      label Title
      input.form-control(type="text",name='title')
    .form-group
      label Description 
      input.form-control(type="text",name='des')
    button.btn.btn-primary.button Add new

  table.table
    thead-dark
      tr.table
        td(scope='col') Title
        td(scope='col') Description
    tbody
      each book in books
        tr
          td(scope="row")
            a(href="/books/info/" + book.id) 
              span= book.title
          td
            a(href="/books/info/" + book.id)
              span= book.des


  a(href="/") Home...