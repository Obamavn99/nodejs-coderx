extends ../layouts/common

block content
  h1 Users List
  if errors
    each error in errors
      .alert.alert-danger= error
      
  form.d-flex.flex-column.w-5(action="/users/add", method="POST")
    .form-group
      label Name
      input.form-control(type="text",name='name')
    .form-group
      label Age 
      input.form-control(type="text",name='age')
    button.btn.btn-primary.button Add new
    
  table.table
    thead-dark
      tr.table
        td(scope='col') Title
        td(scope='col') Description
    tbody
      each user in users
        tr
          td(scope="row")
            a(href="/users/info/" + user.id) 
              span= user.name
          td
            a(href="/users/info/" + user.id)
              span= user.age

  a(href="/") Home...